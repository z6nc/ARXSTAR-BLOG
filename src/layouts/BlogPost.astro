---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import "../styles/blog.css";
import Logo from "../components/common/Logo.astro";
import { SITE_TITLE } from "../consts";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="es">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage}
      type="article"
      pubDate={pubDate}
      updatedDate={updatedDate}
      locale="es_ES"
    />
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        headline: title,
        name: title,
        description,
        datePublished: pubDate?.toISOString?.(),
        dateModified: updatedDate?.toISOString?.(),
        mainEntityOfPage: canonicalURL.toString(),
        url: canonicalURL.toString(),
        image: heroImage ? new URL(heroImage.src, Astro.site).toString() : undefined,
        author: {
          "@type": "Organization",
          name: SITE_TITLE,
        },
        publisher: {
          "@type": "Organization",
          name: SITE_TITLE,
        },
      })}
    </script>
  </head>

  <body>
    <Header />

    <main>
      <article>
        <header class="post-header">
          <div class="meta-data">
            <span class="status-dot"></span>
            <span class="date-text">
              <FormattedDate date={pubDate} />
              {updatedDate && <i>(Act.)</i>}
            </span>
          </div>

          <h1 class="post-title">{title}</h1>

          <div class="separator"></div>
        </header>

        <div class="blog-content">
          <slot />
        </div>
      </article>
      <div class="w-full text-center bg-sky-400/10 py-4 border border-sky-400/20">
        <Logo />
      </div>
    </main>

    <Footer />
  </body>
</html>
