---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead
      title="404: System Error | ARX STAR"
      description="PÃ¡gina no encontrada"
    />
  </head>
  <body class="flex flex-col bg-black text-white antialiased selection:bg-sky-500/30 selection:text-sky-200">
    <Header />

    <main class=" flex flex-col items-center justify-center relative overflow-hidden px-6  min-h-dvh">
      
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-sky-500/20 blur-[100px] rounded-full pointer-events-none"></div>

      <div class="relative z-10 text-center">
        
        <h1 class="text-9xl font-extrabold text-sky-400 ">
          404
        </h1>

        <p class="mt-4 text-lg md:text-xl text-slate-400 font-medium max-w-md mx-auto">
          Ups. Parece que esta ruta no existe en nuestro sistema.
        </p>

        <div class="mt-10">
          <a 
            href="/" 
            class="group relative inline-flex items-center justify-center px-8 py-3 bg-slate-900 border border-slate-700 hover:border-sky-500 rounded text-sm font-mono font-bold text-sky-400 hover:text-white hover:bg-sky-600 transition-all duration-300 shadow-lg hover:shadow-[0_0_20px_rgba(14,165,233,0.5)]"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2 transition-transform group-hover:-translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            
            REGRESAR
          </a>
        </div>

      </div>
    </main>
    
    <Footer />
  </body>
</html>
