---
const response = await fetch(
  "https://api.github.com/repos/z6nc/ARXSTAR-BLOG"
)

const data = await response.json()

const starCounter = data.stargazers_count
---

<div
  class="flex justify-center items-center gap-3 select-none text-white"
>
  <a
    class="flex hover:scale-105 group transition"
    href="https://github.com/z6nc/ARXSTAR-BLOG"
    target="_blank"
    rel="noopener noreferrer"
  >
    <div class="flex items-center">
      
      </div>
      <div
        class="overflow-hidden flex flex-col h-8 items-center opacity-80 rounded-md bg-sky-400/40 border border-sky-400 px-4 font-medium text-xs justify-center group-hover:opacity-100 transition w-36 relative"
      >
        <span class="absolute group-hover:animate-fade-out-up"
          >{`${starCounter} ⭐️ en GitHub`}</span
        >
        <span
          class="absolute opacity-0 -translate-y-5 group-hover:animate-fade-in-up"
          >¡Deja tu estrella!</span
        >
      </div>
    </div>
  </a>
</div>