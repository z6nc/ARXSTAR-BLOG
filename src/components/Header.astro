---
import Logo from "./common/Logo.astro";
import Github from "./common/Github.astro";
const navItems = [
  { label: "About", href: "/about" },
];

---

<header class="relative w-full bg-|[#0a0a0a] border-b border-white/10 ">
  
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    
    <a href="/" class="group flex items-center justify-center gap-3 select-none">
      <Logo />
    </a>

    {/* 2. NAVEGACIÓN + TOGGLE */}
    <div class="flex items-center gap-4">
      
      {/* Enlaces de Navegación */}
      <nav class="hidden sm:flex items-center gap-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-xs font-bold uppercase tracking-[0.15em] text-slate-400 hover:text-white transition-colors duration-200"
          >
            {item.label}
          </a>
        ))}
      </nav>

      {/* Separador Vertical Sutil */}
      <div class="hidden sm:block w-px h-4 bg-slate-200 dark:bg-white/10"></div>

      {/* Botón Theme Toggle (Sin JS pesado) */}
      <Github />

    </div>
  </div>
</header>

